<body style="background-color: #C0C0C0 " >
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark" >
        <div class="container">
          
            @Html.ActionLink("ROYAL CAR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("TinTuc", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.Partial("~/Views/GioHang/GioHangPartial.cshtml")</li>


                </ul>

                @if (Session["KhachHang"] != null)
                {
                        string userData = Session["KhachHang"].ToString();
                        string userName = userData.Split(',')[1];
                 <div class="dropdown">
                    <a href="#"
                       class="dropdown-toggle"
                       data-toggle="dropdown"
                       role="button"
                       aria-haspopup="true"
                       aria-expanded="false">
                        Xin chào @userName
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/NguoiDung/DangXuat">Đăng Xuất</a></li>
                    </ul>
                </div>
            }
            else
            {
                <a href="/NguoiDung/DangNhap" title="">Đăng nhập </a>
            }
            @*@Html.Partial("_LoginPartial") *@*
                    @*< a > @Html.ActionLink("Register", "DangKy", "NguoiDung", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" }) </ a > *@
                    @*< a > @Html.ActionLink("Login", "DangNhap", "NguoiDung", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" }) </ a > *@

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @*@Html.Partial("LoginPartial.html")*@
        @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-inline" }))
        {
        }
        
        @RenderBody()
        <hr />
        <footer>
          
            <p style="color:#fff; font-size:30px;">&copy; @DateTime.Now.Year - Công ty TNHH ROYAL CAR</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
